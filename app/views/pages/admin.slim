      .teams-actions
        h3 Команды
        = link_to 'Создать Команды', new_team_path, class: 'btn btn-primary center-block', style: 'width:' '250px'
        = link_to 'Список Команды', teams_path, class: 'btn btn-primary center-block', style: 'width:' '250px'
